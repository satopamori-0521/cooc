<div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-sm-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src="/assets/images/main.jpg"  width="100%" height="200">
          <div class="card-body">
            <h1><%= recipe.title %></h1>
            <p class="card-text"><%= recipe.content %></p>
          </div>
        </div>
      </div>
  <% end %>
  <%= paginate recipes %>
</div>