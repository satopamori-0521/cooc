<div class="text-center">
  <h1><%= @user.name %></h1>
</div>

<div class="row justify-content-md-center">
  <div class="col-sm-7 offset-sm-3">

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">My投稿一覧 <span class="badge badge-secondary"><%= @count_recipes %></span></a>
        </li>
        <li class="nav-item">
            <a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">お気に入り <span class="badge badge-secondary"><%= @count_likes %></span></a>
        </li>
    </ul>
    <%= render "recipes/recipes", recipes: @likes%>
  </div>
</div>
  